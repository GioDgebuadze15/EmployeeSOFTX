@model List<Employee.Mvc.Controllers.test>

<div class="d-flex align-items-center justify-content-end mb-4">
    <button class="btn btn-success"><i class="mdi mdi-plus"></i> Add</button>
</div>
<div class="input-group mb-3">
    <input type="search" class="form-control bg-transparent text-white search" placeholder="Search"/>
    <span class="input-group-text bg-transparent text-white search-span">
        <i class="mdi mdi-magnify mdi-24px search-icon"></i>
    </span>
</div>

<div class="table-div">
    <table class="table table-hover shadow-lg rounded">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Personal Id</th>
            <th>Gender</th>
            <th>Mobile Number</th>
            <th>Position</th>
            <th>Employee Status</th>
            <th>Date Of Fire</th>
            <th>Controls</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            @foreach (var employee in Model)
            {
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.PersonalId</td>
                <td>@employee.Gender</td>
                <td>@employee.MobileNumber</td>
                <td>@employee.Position</td>
                <td>@employee.EmployeeStatus</td>
                <td>@employee.DateOfFire</td>
                <td>
                    <i class="mdi mdi-pencil mdi-24px edit"></i>
                    <i class="mdi mdi-trash-can-outline mdi-24px delete"></i>
                </td>
            }
        </tr>
        </tbody>
    </table>
</div>